[user]
	name = Aleksey Zvyagin
	email = a.zvg@ya.ru

[merge]
	tool = vimdiff

[alias]
	co = checkout
	ci = commit
	st = status
	ust = ls-files -o --exclude-standard
	b = branch
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
	rb = rebase -i

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[core]
	quotepath = off
	editor = vim
[credential]
	helper = store
