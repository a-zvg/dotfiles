set noignorecase
set incsearch
set hlsearch

nmap <C-Up> 10k
nmap <C-Down> 10j
nmap ] <Action>(GotoNextError)
nmap [ <Action>(GotoPreviousError)

nmap * <Action>(FindWordAtCaret)
nmap _ :let @/=''<CR>:set nohlsearch<CR>
nmap <C-o> :action Back<CR>

nmap <C-\><C-[> <Action>(GotoImplementation)
nmap <C-\><C-r> <Action>(FindUsages)
nmap <C-\><C-/> <Action>(FindInPath)
nmap <C-\><C-\> <Action>(FindSelectionInPath)
nmap <C-\><C-\> wbve<Action>(FindSelectionInPath)
nmap <C-b> <Action>(RecentFiles)

nmap <F9> <Action>(ActivateFindToolWindow)
nmap <F10> <Action>(ActivateProblemsViewToolWindow)
nmap <F11> <Action>(HideActiveWindow)

